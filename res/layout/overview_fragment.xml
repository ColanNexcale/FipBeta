<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/daySumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="@string/daySumLabel" />

    <TextView
        android:id="@+id/daySumValueOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/daySumValue" />

    <TextView
        android:id="@+id/daySumDateOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:text="@string/daySumDate" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="58dp"
        android:clickable="true"
        app:backgroundTint="#0c6810"
        app:fabSize="normal"
        app:srcCompat="@drawable/add_input_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNextDayOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fabPreviousDayOverview"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:fabSize="mini"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/thin_arrow_right" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPreviousDayOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="109dp"
        android:clickable="true"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:fabSize="mini"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/thin_arrow_left" />

    <TextView
        android:id="@+id/dateOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/date" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fabNextDayOverview"
        android:layout_alignTop="@+id/textView"
        android:text="@string/currency" />

    <TextView
        android:id="@+id/currency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/daySumValueOverview"
        android:layout_marginEnd="132dp"
        android:text="@string/currency" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/daySumLabel"
        android:layout_marginBottom="229dp"
        android:text="@string/monthTotalLabel" />

    <TextView
        android:id="@+id/monthSumValueOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/currency"
        android:layout_toEndOf="@+id/daySumLabel"
        android:text="@string/monthSumValue" />

    <TextView
        android:id="@+id/monthLabelOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/currency"
        android:layout_marginStart="79dp"
        android:text="@string/monthSumMonth" />

</RelativeLayout>